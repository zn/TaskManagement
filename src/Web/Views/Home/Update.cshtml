@model UpdateTaskViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Update" method="post" data-ajax="true" data-ajax-method="post" data-ajax-update="#mainBlock" data-ajax-mode="replace"
      asp-antiforgery="true">

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control">
        <span asp-validation-for="Title" class="form-text text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="form-text text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Executors"></label>
        <input asp-for="Executors" class="form-control">
        <span asp-validation-for="Executors" class="form-text text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control" asp-items="@Model.StatusSelectList"></select>
        <span asp-validation-for="Status" class="form-text text-danger"></span>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="CompletionDate"></label>
            <input asp-for="CompletionDate" class="form-control" value="@Model.CompletionDate.ToString("yyyy-MM-dd")">
        </div>
        <div class="form-group col-md-6 pr-0">
            <label asp-for="CompletionTime"></label>
            <input asp-for="CompletionTime" class="form-control" value="@Model.CompletionDate.ToString("HH:mm")">
        </div>
        <span asp-validation-for="CompletionDate" class="form-text text-danger"></span>
        <span asp-validation-for="CompletionTime" class="form-text text-danger"></span>
    </div>

    <div class="form-group">
        <button onclick="cancel_click()" type="button" class="btn btn-default">Отмена</button>
        <button type="submit" class="btn btn-primary">Update</button>
    </div>

    <input asp-for="Id" type="hidden" />
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}